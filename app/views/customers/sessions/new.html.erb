<div class="container">
  <div class="d-flex align-items-center" style="width:100%; height:100px;">
    <h3><span class="bg-light">ログイン</span></h3>
  </div>


<h5><span class="bg-light">会員の方はこちらからログイン</span></h5>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :"メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

      <div class="field">
        <%= f.label :"パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
        <br>
      <!--<% if devise_mapping.rememberable? %>-->
        <!--<div class="field">-->
          <!--<%= f.check_box :remember_me %>-->
          <!--<%= f.label :remember_me %>-->
        <!--</div>-->
          <!--<% end %>-->
 <div class="mx-auto mt-10">
  <div class="actions">
    <%= f.submit "ログイン",class:"btn btn-primary" %>
  </div>
<% end %>
  <br>

   <h5><span class="bg-light">会員登録がお済みでない方</span></h5>
     <p><%= link_to "こちら", new_customer_registration_path %>　から新規登録を行ってください。</p>
 </div>
</div>
