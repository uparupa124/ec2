<div class="container">
 <div class="d-flex align-items-center" style="width:100%; height:100px;">
  <h3><span class="bg-light">商品新規登録</span></h3>
 </div>
  <%= form_with model:@item, url: admin_items_path, local: true do |f| %>
   <table>
     <tr>
       <td><%= f.label :商品画像 %></td>
 　          <!--attachment付け足す-->
       <td><%= f.attachment_field :image %></td>
     </tr>
       <tr>
        <td><%= f.label :商品名 %></td>
　      <td><%= f.text_field :name %></td>
　     </tr>
　       <tr>
　         <td><%= f.label :商品説明 %></td>
　         <td><%= f.text_area :introduction %></td>
　       </tr>
　         <tr>
　　         <td><%= f.label :ジャンル %></td>
　            <!--ジャンル項目付け足す-->
             <td><%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: "選択してください" } %></td>
           </tr>
             <tr>
　　　         <td><%= f.label :税抜価格 %></td>
　             <td><%= f.text_field :price %>円</td>
　           </tr>
　             <tr>
　               <td><%= f.label :販売ステータス %></td>
　                    <!--販売ステータス付け足す-->
　               <td></td>
　             </tr>
　 </table>
　<%= f.submit "新規登録", class:"btn btn-success" %>
<% end %>
</div>